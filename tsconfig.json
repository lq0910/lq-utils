{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "allowJs": false,
        "lib": ["es6", "dom"],
        "types": ["mocha"],
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedParameters": false,
        "noUnusedLocals": true
    }
}
